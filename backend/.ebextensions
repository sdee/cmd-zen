files:
  "/etc/nginx/conf.d/static.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # Enhanced static file serving configuration
      server {
        # This configuration will be merged with the main nginx config
        
        # Increase the max body size if needed
        client_max_body_size 20M;
        
        # Optimize static file serving
        location /static/ {
          alias /var/app/current/static/;
          gzip on;
          gzip_types text/plain text/css application/javascript application/json image/svg+xml;
          expires 1d;
          access_log off;
          add_header Cache-Control "public";
          # Fall back to FastAPI if file doesn't exist
          try_files $uri @proxy;
        }
        
        location @proxy {
          proxy_pass http://127.0.0.1:8000;
          proxy_http_version 1.1;
          proxy_set_header Upgrade $http_upgrade;
          proxy_set_header Connection "upgrade";
          proxy_set_header Host $host;
          proxy_set_header X-Real-IP $remote_addr;
          proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }
      }

  "/etc/nginx/conf.d/proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # Proxy timeout settings
      proxy_connect_timeout 75s;
      proxy_read_timeout 300s;

container_commands:
  01_reload_nginx:
    command: "service nginx reload"
